{
  "name": "ev-simtel-demo",
  "version": "1.0.0",
  "description": "Virtual learning lab to learn about electric vehicles.",
  "main": "src/main.js",
  "author": "NVIS",
  "license": "UNLICENSED",
  "scripts": {
    "start": "electron src/main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "canvas-gauges": "^2.1.7",
    "chart.js": "^4.4.0",
    "electron": "^27.3.9",
    "electron-builder": "^24.9.1",
    "electron-is-dev": "^2.0.0",
    "electron-packager": "^17.1.2",
    "electron-rebuild": "^3.2.9",
    "justgage": "^1.6.1"
  },
  "build": {
    "appId": "com.nvis.ev-simtel",
    "productName": "EV-SIMTEL-DEMO",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "uninstallDisplayName": "EV-SIMTEL-DEMO",
      "license": "license.md",
      "allowToChangeInstallationDirectory": true
    },
    "npmRebuild": true,
    "files": [
      "src/shared/**/*",
      "**/*",
      "!**/*.map",
      "node_modules/chart.js/**/*",
      "node_modules/justgage/**/*",
      "node_modules/raphael/**/*"
    ]
  },
  "dependencies": {
    "raphael": "^2.3.0",
    "justgage": "^1.6.1"
  }
}